---
import MainLayout from "@layout/MainLayout.astro";
---

<MainLayout title="404 | Not Found">
  <section class="size-full py-10">
    <h2 class="text-center text-4xl text-amber-300">¡Lo sentimos!</h2>
    <div class="flex items-center justify-center gap-x-3 drop-shadow-2xl drop-shadow-amber-200/25">
        <h2 class="flex items-center justify-center text-[10rem] md:text-[14rem]">4</h2>
        <img class="h-[8rem] md:h-[10rem] object-cover" src="https://i.ibb.co/fYYzPhtJ/pokemon-4635112-1280.webp" alt="pokeball">
        <h2 class="flex items-center justify-center text-[10rem] md:text-[14rem]">4</h2>
    </div>
    <h2 class="text-center text-2xl text-amber-300">Pokémon no encontrado...</h2>
   <div class="flex items-center justify-center">
     <a 
         class="w-[90%] md:w-56 flex items-center justify-center text-lg text-black bg-amber-300 rounded-md py-2 px-4 mt-5 hover:scale-105 transition-all duration-300 font-bold"
         href="/pokemons/1"
     >
         Regresar a Pokémones
     </a>
   </div>
  </section>
</MainLayout>
